@model MvcPL.Models.FullUserViewModel
@{
    ViewBag.Title = "Edit";
}

<h2>Edit a user's ability</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div class="row-fluid">
            <div class="col-md-9 col-md-offset-3">
                <div class="form-group">
                    @Html.LabelFor(model => model.NickName, new { @class = "col-md-2 control-label" })
                    @Html.DisplayFor(model => model.NickName)
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">User roles</label>
                    <ul class="list-group col-md-offset-2">
                        @foreach (var item in Model.Roles)
                        {
                            <li>@Html.DisplayFor(x => item.Name)</li>
                        }
                    </ul>
                </div>
                <div class="form-group">
                    <div>
                        <label class="col-md-2 control-label">New Roles</label>
                    </div>
                    <div class="col-md-offset-2">
                        @Html.Action("Partial")
                    </div>
                </div>
                <div class="form-group">
                    <div>
                        <input type="submit" class="btn btn-primary" value="Save" />
                    </div>
                </div>
            </div>
        </div>
    </fieldset>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<br />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


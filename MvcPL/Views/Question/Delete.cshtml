@model MvcPL.Models.QuestionViewModel
@{
    ViewBag.Title = "Delete";
}

<h2>Delete question</h2>

@using (Html.BeginForm("Delete", "Question", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h3>Are you sure you want to delete this question?</h3> <br />
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.TestId)
    @Html.HiddenFor(model => model.QuestionContent)
    @Html.HiddenFor(model => model.QuantityPoint)

    <div class="form-group">
        @Html.LabelFor(m => m.QuestionContent, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.QuestionContent)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.QuantityPoint, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.QuantityPoint)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Delete" />
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to List", "Show", "Test", new { idTest = Model.TestId}, null)
    </div>
    <br />
}

